---
import SlidesLayout from "../../../../layouts/talks/embrace-the-patch.astro";
import CodeSlide from "../../../../components/Slide/CodeSlide.astro";
import { Code } from "astro/components";

import { transformerMetaWordHighlight } from "@shikijs/transformers";

const transformers = [
  transformerMetaWordHighlight({
    className:
      "highlighted-word rounded-sm ring-2 ring-offset-2 ring-offset-pink-500 ring-black/50",
  }),
];
---

<SlidesLayout title="Slide 25.3: preparing email patch">
  <CodeSlide
    next-href="/talks/embrace-the-patch/25/4-prepare-for-format"
    next-label="Go to slide 25.4: run format-patch"
    before:hidden
    after:hidden
    single:transition-name="shell"
  >
    <Code
      slot="single"
      lang="shell"
      meta="/353ff4/,/3d3c5d/"
      transformers={transformers}
      code={`$ git format-patch 353ff4..3d3c5d`.trim()}
    />
  </CodeSlide>
</SlidesLayout>
