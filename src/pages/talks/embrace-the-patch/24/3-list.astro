---
import SlidesLayout from "../../../../layouts/talks/embrace-the-patch.astro";

const nextHref = "/talks/embrace-the-patch/24/4-list";
const nextLabel = "Goto slide 24.4: Uncommon but not rare";
---

<SlidesLayout title="Slide 24.3: Uncommon but not rare">
  <section
    class="slide flex-col flex-wrap sm:place-content-center"
    transition:name="slide"
  >
    <div
      class="!m-0 sm:px-6 md:px-12 py-6 sm:mx-6 md:mx-12 self-center justify-self-center grid grid-cols-1 grid-rows-3 gap-x-12 gap-y-4"
      style="grid-template-columns: 1fr; grid-template-rows: auto auto 1fr;"
    >
      <h2
        class="!m-0 font-bold px-12 py-6 lg:text-7xl md:text-5xl text-3xl mx-12 self-center justify-self-center"
        "
        transition:name="title"
        "
      >
        Uncommon but not rare
      </h2>
      <ul class="list list-disc list-inside" transition:name="list">
        <li>Linux Kernel</li>
        <li>
          <a href="https://wiki.postgresql.org/wiki/Submitting_a_Patch"
            >PostgreSQL</a
          >
        </li>
        <li>
          <a href="https://sr.ht/"> Anything on sourcehut</a>
        </li>
        <li>
          GNU project (<a href="https://www.gnu.org/software/hurd//hurd.html"
            >Hurd</a
          >, <a
            href="https://guix.gnu.org/manual/devel/en/html_node/Submitting-Patches.html"
            >GUIx</a
          >, etc.)
        </li>
      </ul>
    </div>

    {
      nextHref ? (
        <footer
          class="absolute right-0 top-0 bottom-0 flex items-center"
          transition:name="next"
        >
          <a rel="next" href={nextHref} class="group">
            <svg
              xmlns="http://www.w3.org/2000/svg"
              fill="none"
              viewBox="0 0 24 24"
              stroke-width="1.5"
              stroke="currentColor"
              role="img"
              stroke-width="2"
            >
              <path
                stroke-linecap="round"
                stroke-linejoin="round"
                d="M13.5 4.5 21 12m0 0-7.5 7.5M21 12H3"
              />
              <title>{nextLabel}</title>
            </svg>
          </a>
        </footer>
      ) : null
    }
  </section>
</SlidesLayout>
