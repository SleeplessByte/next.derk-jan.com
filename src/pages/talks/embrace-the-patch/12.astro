---
import { Code } from "astro:components";
import ShellSlide from "../../../components/Slide/ShellSlide.astro";
import SlidesLayout from "../../../layouts/talks/embrace-the-patch.astro";
import { words } from "../../../functions/transformations";

const nextHref = "/talks/embrace-the-patch/13";
const nextLabel = "Go to slide 13: git diff similarity";
---

<SlidesLayout title="Slide 12: git diff similarity">
  <ShellSlide next-href={nextHref} next-label={nextLabel}>
    <Code
      slot="shell"
      lang="shell"
      meta="/diff -u/"
      transformers={words}
      code={`$ diff -u before.rb after.rb`.trim()}
    />

    <Code
      slot="result"
      lang="shell"
      meta="/git diff/"
      transformers={words}
      code={`$ git diff --no-index before.rb after.rb`.trim()}
    />
  </ShellSlide>
</SlidesLayout>
