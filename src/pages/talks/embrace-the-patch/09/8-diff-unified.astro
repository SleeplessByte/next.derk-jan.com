---
import { Code } from "astro:components";
import SlidesLayout from "../../../../layouts/talks/embrace-the-patch.astro";
import ShellSlide from "../../../../components/Slide/ShellSlide.astro";

const nextHref = "/talks/embrace-the-patch/09/9-diff-unified-result";
const nextLabel = "Go to slide 9.9: explaining unified diff";
---

<SlidesLayout title="Slide 9.8: explaining unified diff">
  <ShellSlide next-href={nextHref} next-label={nextLabel}>
    <Code
      slot="shell"
      lang="shell"
      code={`$ diff -u before.rb after.rb`.trim()}
    />

    <Code
      class="grayscale dark:opacity-50"
      slot="result"
      lang="diff"
      code={`
0a1,2
> # frozen_string_literal: true
>
3c5
<     'Goodbye, Mars!'
---
>     'Hello, World!'
`.trim()}
    />
  </ShellSlide>
</SlidesLayout>
