---
import SlidesLayout from "../../../../layouts/talks/embrace-the-patch.astro";
import { Code } from "astro:components";
import CodeSlide from "../../../../components/Slide/CodeSlide.astro";
import EmbeddedCodeSlide from "../../../../components/Slide/EmbeddedCodeSlide.astro";

const nextHref = "/talks/embrace-the-patch/09/6-diff-result";
const nextLabel = "Go to slide 9.6: explaining diff";
---

<SlidesLayout title="Slide 9.5: explaining diff">
  <EmbeddedCodeSlide next-href={nextHref} next-label={nextLabel}>
    <CodeSlide
      slide:embedded
      slot="embedded"
      after:disable-transition
      before:disable-transition
    >
      <Code
        slot="before"
        lang="ruby"
        code={`
class HelloWorld
  def self.hello
    "Goodbye, Mars!"
  end
end
`.trim()}
      />

      <Code
        slot="after"
        lang="ruby"
        code={`
# frozen_string_literal: true

class HelloWorld
  def self.hello
    "Hello, World!"
  end
end
`.trim()}
      />
    </CodeSlide>

    <Code
      slot="before"
      lang="shell"
      code={`$ diff before.rb after.rb`.trim()}
    />

    <Code slot="after" lang="diff" code={``.trim()} />
  </EmbeddedCodeSlide>
</SlidesLayout>
