---
import { Code } from "astro:components";
import SlidesLayout from "../../../../layouts/talks/embrace-the-patch.astro";
import ShellSlide from "../../../../components/Slide/ShellSlide.astro";

const nextHref = "/talks/embrace-the-patch/10";
const nextLabel = "Go to slide 10: diff";
---

<SlidesLayout title="Slide 9.9: explaining unified diff">
  <ShellSlide next-href={nextHref} next-label={nextLabel}>
    <Fragment slot="single"></Fragment>
    <Code
      slot="result"
      lang="diff"
      class="!max-h-full tiny-zoom"
      code={`
--- before.rb   2025-09-28 18:48:13.040212261 +0200
+++ after.rb    2025-09-28 18:48:17.628395029 +0200
@@ -1,5 +1,7 @@
+# frozen_string_literal: true
+
 class HelloWorld
   def self.hello
-    'Goodbye, Mars!'
+    'Hello, World!'
   end
 end
`.trim()}
    />
  </ShellSlide>
</SlidesLayout>
