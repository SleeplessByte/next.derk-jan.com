---
import { Code } from "astro:components";
import CodeSlide from "../../../../components/Slide/CodeSlide.astro";
import SlidesLayout from "../../../../layouts/talks/embrace-the-patch.astro";
import EmbeddedCodeSlide from "../../../../components/Slide/EmbeddedCodeSlide.astro";

const nextHref = "/talks/embrace-the-patch/09/7-diff-unified";
const nextLabel = "Go to slide 9.7: explaining unified diff";
---

<SlidesLayout title="Slide 9.6: explaining diff">
  <EmbeddedCodeSlide next-href={nextHref} next-label={nextLabel}>
    <CodeSlide
      slide:embedded
      slot="embedded"
      after:disable-transition
      before:disable-transition
    >
      <Code
        slot="before"
        lang="ruby"
        code={`
class HelloWorld
  def self.hello
    "Goodbye, Mars!"
  end
end
`.trim()}
      />

      <Code
        slot="after"
        lang="ruby"
        code={`
# frozen_string_literal: true

class HelloWorld
  def self.hello
    "Hello, World!"
  end
end
`.trim()}
      />
    </CodeSlide>

    <Code
      slot="before"
      lang="shell"
      code={`$ diff before.rb after.rb`.trim()}
    />

    <Code
      slot="after"
      lang="diff"
      code={`
0a1,2
> # frozen_string_literal: true
>
3c5
<     'Goodbye, Mars!'
---
>     'Hello, World!'
`.trim()}
    />
  </EmbeddedCodeSlide>
</SlidesLayout>
