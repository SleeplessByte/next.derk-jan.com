---
import { Code } from "astro:components";
import SlidesLayout from "../../../../layouts/talks/embrace-the-patch.astro";
import CodeSlide from "../../../../components/Slide/CodeSlide.astro";

const nextHref = "/talks/embrace-the-patch/14/changed";
const nextLabel = "Go to slide 14.1: patch creation";
---

<SlidesLayout title="Slide 14: patch creation">
  <CodeSlide next-href={nextHref} next-label={nextLabel}>
    <Code
      slot="single"
      lang="shell"
      code={`git diff --no-index before.rb after.rb`.trim()}
    />
  </CodeSlide>
</SlidesLayout>
