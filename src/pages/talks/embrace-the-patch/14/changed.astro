---
import { Code } from "astro:components";
import CodeSlide from "../../../../components/Slide/CodeSlide.astro";
import { words } from "../../../../functions/transformations";
import SlidesLayout from "../../../../layouts/talks/embrace-the-patch.astro";

const nextHref = "/talks/embrace-the-patch/15";
const nextLabel = "Go to slide 15: patch application";
---

<SlidesLayout title="Slide 14.1: patch creation">
  <CodeSlide next-href={nextHref} next-label={nextLabel}>
    <Code
      slot="single"
      lang="shell"
      code={`git diff --no-index before.rb after.rb > my-changes.patch`.trim()}
      meta="/> my-changes.patch/"
      transformers={words}
    />
  </CodeSlide>
</SlidesLayout>
