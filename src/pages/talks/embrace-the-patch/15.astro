---
import { Code } from "astro:components";
import SlidesLayout from "../../../layouts/talks/embrace-the-patch.astro";
import CodeSlide from "../../../components/Slide/CodeSlide.astro";

const nextHref = "/talks/embrace-the-patch/16";
const nextLabel = "Go to slide 16: patch application";
---

<SlidesLayout title="Slide 15: patch application">
  <CodeSlide next-href={nextHref} next-label={nextLabel}>
    <Code
      slot="single"
      lang="shell"
      code={`git apply my-changes.patch`.trim()}
    />
  </CodeSlide>
</SlidesLayout>
