---
import SlidesLayout from "../../../../layouts/talks/embrace-the-patch.astro";
import { Code } from "astro:components";
import CodeSlide from "../../../../components/Slide/CodeSlide.astro";

const nextHref = "/talks/embrace-the-patch/08/5-diff-result";
const nextLabel = "Go to slide 8.5: explaining diff";
---

<SlidesLayout title="Slide 8.4: explaining diff">
  <section
    class="slide flex-col flex-wrap place-content-center"
    transition:name="slide"
  >
    <div
      class="!m-0 px-12 py-6 mx-12 self-center justify-self-center grid grid-cols-2 grid-rows-3 gap-x-12 gap-y-4"
      style="grid-template-columns: 1fr 1fr; grid-template-rows: auto auto 1fr;"
    >
      <div class="row-span-3 self-center">
        <div class="border-2 border-zinc-400 dark:border-zinc-600 rounded-xl">
          <CodeSlide slide:embedded>
            <Code
              slot="before"
              lang="ruby"
              code={`
class HelloWorld
  def self.hello
    "Goodbye, Mars!"
  end
end
`.trim()}
            />

            <Code
              slot="after"
              lang="ruby"
              code={`
class HelloWorld
  def self.hello
    "Hello, World!"
  end
end
`.trim()}
            />
          </CodeSlide>
        </div>
      </div>

      <div class="-my-6 overflow-visible" transition:name="shell">
        <Code
          slot="shell"
          lang="shell"
          code={`$ diff before.rb after.rb`.trim()}
        />
      </div>

      <svg
        transition:name="shell-arrow"
        xmlns="http://www.w3.org/2000/svg"
        fill="none"
        viewBox="0 0 24 24"
        stroke-width="1.5"
        stroke="currentColor"
        class="size-6 self-center justify-self-center"
      >
        <path
          stroke-linecap="round"
          stroke-linejoin="round"
          d="m4.5 5.25 7.5 7.5 7.5-7.5m-15 6 7.5 7.5 7.5-7.5"></path>
      </svg>

      <div class="-my-6 overflow-visible" transition:name="result">
        <Code slot="result" lang="diff" code={``.trim()} />
      </div>
    </div>

    {
      nextHref ? (
        <footer
          class="absolute right-0 top-0 bottom-0 flex items-center"
          transition:name="next"
        >
          <a rel="next" href={nextHref} class="group">
            <svg
              xmlns="http://www.w3.org/2000/svg"
              fill="none"
              viewBox="0 0 24 24"
              stroke-width="1.5"
              stroke="currentColor"
              role="img"
              stroke-width="2"
            >
              <path
                stroke-linecap="round"
                stroke-linejoin="round"
                d="M13.5 4.5 21 12m0 0-7.5 7.5M21 12H3"
              />
              <title>{nextLabel}</title>
            </svg>
          </a>
        </footer>
      ) : null
    }
  </section>
</SlidesLayout>
