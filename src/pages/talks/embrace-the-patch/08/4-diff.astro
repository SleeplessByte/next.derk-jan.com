---
import { Code } from "astro:components";
import CodeSlide from "../../../../components/Slide/CodeSlide.astro";
import EmbeddedCodeSlide from "../../../../components/Slide/EmbeddedCodeSlide.astro";
import SlidesLayout from "../../../../layouts/talks/embrace-the-patch.astro";

const nextHref = "/talks/embrace-the-patch/08/5-diff-result";
const nextLabel = "Go to slide 8.5: explaining diff";
---

<SlidesLayout title="Slide 8.4: explaining diff">
  <EmbeddedCodeSlide next-href={nextHref} next-label={nextLabel}>
    <CodeSlide slide:embedded slot="embedded">
      <Code
        slot="before"
        lang="ruby"
        code={`
class HelloWorld
  def self.hello
    "Goodbye, Mars!"
  end
end
`.trim()}
      />

      <Code
        slot="after"
        lang="ruby"
        code={`
class HelloWorld
  def self.hello
    "Hello, World!"
  end
end
`.trim()}
      />
    </CodeSlide>

    <Code
      slot="before"
      lang="shell"
      code={`$ diff before.rb after.rb`.trim()}
    />

    <Code slot="after" lang="diff" code={``.trim()} />
  </EmbeddedCodeSlide>
</SlidesLayout>
