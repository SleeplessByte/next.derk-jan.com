---
import { Code } from "astro:components";
import SlidesLayout from "../../../layouts/talks/embrace-the-patch.astro";
import ListSlide from "../../../components/Slide/ListSlide.astro";

const nextHref = "/talks/embrace-the-patch/17";
const nextLabel = "Go to slide 17: quick recap";
---

<SlidesLayout title="Slide 16: patch application">
  <ListSlide
    next-href={nextHref}
    next-label={nextLabel}
    title:transition-name="single"
    type="ol"
  >
    <Code
      transition:name="single"
      slot="title"
      lang="shell"
      code={`git apply my-changes.patch`.trim()}
    />

    <Fragment>
      <li>Take <code>before.rb</code></li>
      <li>Apply changes</li>
      <li>Rename to <code>after.rb</code></li>
    </Fragment>
  </ListSlide>
</SlidesLayout>
