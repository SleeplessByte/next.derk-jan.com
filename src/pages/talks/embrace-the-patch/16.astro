---
import { Code } from "astro:components";
import SlidesLayout from "../../../layouts/talks/embrace-the-patch.astro";

const nextHref = "/talks/embrace-the-patch/17";
const nextLabel = "Go to slide 17: quick recap";
---

<SlidesLayout title="Slide 16: patch application">
  <section
    class="slide flex-col flex-wrap place-content-center"
    transition:name="slide"
  >
    <div
      class="!m-0 px-12 py-6 mx-12 self-center justify-self-center grid grid-cols-1 grid-rows-3 gap-x-12 gap-y-4"
      style="grid-template-columns: 1fr; grid-template-rows: auto auto 1fr;"
    >
      <div class="-my-6 overflow-visible" transition:name="shell">
        <Code lang="shell" code={`git apply my-changes.patch`.trim()} />
      </div>

      <ol class="list list-decimal">
        <li>Take <code>before.rb</code></li>
        <li>Apply changes</li>
        <li>Rename to <code>after.rb</code></li>
      </ol>
    </div>

    {
      nextHref ? (
        <footer
          class="absolute right-0 top-0 bottom-0 flex items-center"
          transition:name="next"
        >
          <a rel="next" href={nextHref} class="group">
            <svg
              xmlns="http://www.w3.org/2000/svg"
              fill="none"
              viewBox="0 0 24 24"
              stroke-width="1.5"
              stroke="currentColor"
              role="img"
              stroke-width="2"
            >
              <path
                stroke-linecap="round"
                stroke-linejoin="round"
                d="M13.5 4.5 21 12m0 0-7.5 7.5M21 12H3"
              />
              <title>{nextLabel}</title>
            </svg>
          </a>
        </footer>
      ) : null
    }
  </section>
</SlidesLayout>
