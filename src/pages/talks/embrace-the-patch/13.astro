---
import { Code } from "astro:components";
import SlidesLayout from "../../../layouts/talks/embrace-the-patch.astro";
import ShellSlide from "../../../components/Slide/ShellSlide.astro";

const nextHref = "/talks/embrace-the-patch/14";
const nextLabel = "Go to slide 14: patch creation";
---

<SlidesLayout title="Slide 13: git diff similarity">
  <ShellSlide next-href={nextHref} next-label={nextLabel}>
    <Fragment slot="single"></Fragment>
    <Code
      slot="result"
      lang="diff"
      class="!max-h-full tiny-zoom"
      code={`
diff --git a/before.rb b/after.rb
index 643ed47f8..918a1fb3a 100644
--- a/before.rb
+++ b/after.rb
@@ -1,5 +1,7 @@
+# frozen_string_literal: true
+
 class HelloWorld
   def self.hello
-    'Goodbye, Mars!'
+    'Hello, World!'
   end
 end
`.trim()}
    />
  </ShellSlide>
</SlidesLayout>
